<%= form_for [poke, message], remote: true do |f| %>
  <%= f.text_area :content, class: "autoExpand", placeholder: "Your message here...", rows: "1" %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :poke_id, value: poke.id %>
  <%= f.button class: "btn-send" do %>
    <i class="fas fa-paper-plane"></i>
  <% end %>
<% end %>
