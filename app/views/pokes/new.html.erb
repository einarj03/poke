<div class="page-content gradient-background messenger">
  <div class="messages-heading">
    <h3>Poke</h3>
    <h1><%= @receiver.first_name %></h1>
  </div>
  <div class="message-container">
      <%= link_to user_path(@receiver) do %>
        <div class="lg-avatar msg-avatar-left avatar-img" style="background-image: url('<%= image_path "boy2"%>')">
        </div>
      <% end %>
      <div class="message-text">
        Hit me with your best shot!
      </div>
  </div>
</div>
<%= render 'messaging_container', poke: @poke, receiver: @receiver %>
