<%= form_for poke, class: "form-inline" do |f| %>
  <%= f.text_area :content, class: "autoExpand", placeholder: "Your message here...", rows: "1" %>
  <%= f.hidden_field :sender_id, value: current_user.id %>
  <%= f.hidden_field :receiver_id, value: receiver.id %>
  <%= f.button class: "btn-send" do %>
    <i class="fas fa-paper-plane"></i>
  <% end %>
<% end %>
