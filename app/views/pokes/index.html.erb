<div class="page-content pokes-index">
  <div class="gradient-background-reverse">
    <div class="pokes-tabs">
      <%= link_to "Poked", "#", class: "tab" %>
      <%= link_to "Pokes", "#", class: "tab" %>
    </div>
    <div class="pokes-container">
      <% @sent_pokes.each do |poke|%>
        <%= link_to poke_path(poke) do %>
          <div class="poke-container">
            <%= image_tag 'boy1.jpg', class: "lg-avatar" %>
            <div class="poke-content">
              <h3 class="poke-name"><%= poke.receiver.first_name %></h3>
              <p class="poke-body"><strong> Poked
                <%= "#{poke.poke_created_time} ago" %>
              </strong></p>
            </div>
            <h3 class="poke-time-left">4h39min left</h3>
          </div>
        <% end %>
      <% end %>
      <% @received_pokes.each do |poke|%>
        <%= link_to poke_path(poke) do %>
          <div class="poke-container">
            <%= image_tag 'boy1.jpg', class: "lg-avatar" %>
            <div class="poke-name">
              <h3><%= "#{poke.sender.first_name} ago" %></h3>
            </div>
            <div class="poke-body">
              <p><strong> Poked

                <%= poke.poke_created_time %>
              </strong></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
