<div class="page-content gradient-background">
  <div>
    <div class="pokes-tabs">
      <%= link_to "Poked", "#", class: "tab" %>
      <%= link_to "Pokes", "#", class: "tab" %>
    </div>
    <div class="pokes-container">
      <% @my_sent_pokes.each do |poke|%>
        <div class="poke-container">
          <%= image_tag 'boy1.jpg', class: "lg-avatar" %>
          <div class="poke-content">
            <h5 class="poke-name"><%= poke.receiver.first_name %></h5>
            <p class="poke-body"> Poked
              <%= "#{poke.poke_created_time} ago" %>
            </p>
          </div>
          <h3 class="poke-time-left">4h39min left</h3>
        </div>
      <% end %>
      <% @my_received_pokes.each do |poke|%>
        <div class="poke-container">
          <%= image_tag 'boy1.jpg', class: "lg-avatar" %>
          <div class="poke-name">
            <h3><%= "#{poke.sender.first_name} ago" %></h3>
          </div>
          <div class="poke-body">
            <p><strong> Poked

              <%= poke.poke_created_time %>
            </strong></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
