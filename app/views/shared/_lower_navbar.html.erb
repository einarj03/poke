<% if user_signed_in? %>
  <div class="navbar-space"></div>
  <div class="bottom-fixed">
    <div class="lower-navbar">
      <div class="lower-navbar-strip"></div>
      <div class="lower-navbar-buttons">
        <div class="back-btn-container">
          <%= link_to user_path(current_user) do %>
            <i class="fas fa-user"></i>
          <% end %>
        </div>
        <div class="poke-btn-container">
          <%= link_to users_path do %>
            <%= image_tag("poke-home-button.png", :alt => "home", class: "fas", size: "25x23") %>
          <% end %>
        </div>
        <%= link_to pokes_path, class: "navbar-messages" do %>
          <i class="fas fa-comment-alt"></i>
          <%#= current_user.new_message > 0 ? current_user.new_message : "" %>
          <%#= current_user.new_pokes_count > 0 ? current_user.new_pokes_count : "" %>
          <%= current_user.new_messages_count + current_user.new_pokes_count %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<script>
  var prevScrollpos = window.pageYOffset;
  window.onscroll = function() {
  var currentScrollPos = window.pageYOffset;
    if (prevScrollpos > currentScrollPos) {
      document.querySelector(".lower-navbar").style.bottom = "0";
    } else {
      document.querySelector(".lower-navbar").style.bottom = "-50px";
    }
    prevScrollpos = currentScrollPos;
  }
</script>
