<% if user_signed_in? && !(controller_name == "pokes" && (action_name == "show" || action_name == "new" )) %>
  <div class="bottom-fixed">
    <div class="lower-navbar">
      <div class="lower-navbar-strip"></div>
      <div class="lower-navbar-buttons">
        <div class="navbar-btn-container">
          <%= link_to user_path(current_user) do %>
            <i class="fas fa-user"></i>
          <% end %>
        </div>
        <div class="navbar-btn-container">
          <%= link_to users_path do %>
            <%= image_tag("poke-home-button.png", :alt => "home", class: "fas", size: "25x23") %>
          <% end %>
        </div>
        <div class="navbar-btn-container">
          <%= link_to pokes_path, class: "navbar-messages" do %>
            <i class="fas fa-comment-alt"></i>
            <div class="nav-message-count">
              <% if current_user.new_messages_count + current_user.new_pokes_count > 0 %>
                <%= current_user.new_messages_count + current_user.new_pokes_count %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
